{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.ts"],
  "coveragePathIgnorePatterns": [
    "node_modules", ".d.ts", "index.ts"
  ],
  "testMatch": [
    "**/__tests__/*.ts"
  ]
}
